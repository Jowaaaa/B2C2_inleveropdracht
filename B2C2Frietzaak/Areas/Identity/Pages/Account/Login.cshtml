@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InleveropdrachtB2C2Frietzaak.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark text-white-50" style="padding-top: 100px">
    <div class="container min-vh-100">
    <h1 class="text-center">Inloggen</h1>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="w-50 mx-auto">
                    <form id="account" method="post">
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="col form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label text-dark">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label text-dark">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="checkbox mb-3">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @* @Html.DisplayNameFor(m => m.Input.RememberMe) *@ Onthoud mij
                            </label>
                        </div>
                        <div class="d-flex text-align-center">
                            <button id="login-submit" type="submit" class="me-1 w-100 btn btn-lg btn-outline-success hover:">Log in</button>
                            <button asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="me-1 btn btn-outline-primary">Registreer</button>

                        </div>
                        <div>
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Wachtwoord vergeten?</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
</body>
</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
