@model B2C2Frietzaak.Models.Product

<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InleveropdrachtB2C2Frietzaak.styles.css" asp-append-version="true" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
</head>
<body class="bg-dark text-white-50">
    <div class="row mt-5 justify-content-center">
        <div class="col-md-4 border rounded">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10 text-end">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10 text-end">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2 mt-5">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dt class="col-sm-2 mt-5">
                    @Html.DisplayNameFor(model => model.ImageUrl)
                </dt>
                
                <dd class="col-sm-10 text-end">
                    <img src="/@Model.ImageUrl" style="width: 100px; height: 100px" alt="@Model.Name" />
                </dd>
            </dl>
            <form class="form-group d-flex m-2 justify-content-between" asp-action="DeleteProducts">
                <button asp-action="ProductsOverview" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-90deg-left"></i>
                </button>
                <input type="hidden" asp-for="ProductId" />
                <input type="submit" value="Verwijderen" class="btn btn-danger" />
            </form>
        </div>
    </div>
</body>
</html>