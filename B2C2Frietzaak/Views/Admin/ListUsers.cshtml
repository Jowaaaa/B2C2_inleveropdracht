@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityUser>
@inject UserManager<IdentityUser> UserManager

<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InleveropdrachtB2C2Frietzaak.styles.css" asp-append-version="true" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
</head>
<body class="bg-dark text-white-50">
    <div class="container min-vh-100">


        <h1>All Users</h1>


        @if (Model.Any())
        {
            <div class="container">
                <div class="row">
                    @foreach (var user in Model)
                    {
                        <div class="card mx-2 productCard bg-dark text-white-50 mt-5">
                            <div class="card-header">
                                <p class="text-center"></p>
                                <div class="card-body"></div>

                                <p><a class="text-white fw-bold text-decoration-none">ID:</a> @user.Id</p>
                                <p class="mt-3"><a class="text-white fw-bold text-decoration-none">Username:</a> @user.UserName</p>
                                <div class="card-footer"></div>
                                <p class="d-flex justify-content-between">
                                    <button type="submit" class="btn btn-outline-danger"> Verwijderen</button>
                                    <a asp-controller="Admin" asp-action="UserDetails" asp-route-id="@user.Id" class="btn btn-outline-primary"> Meer info</a>
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <p>Geen klanten beschikbaar</p>
        }
    </div>
</body>
</html>