@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityUser>
@inject UserManager<IdentityUser> UserManager
    
<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InleveropdrachtB2C2Frietzaak.styles.css" asp-append-version="true" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
</head>
<body class="bg-dark text-white-50" style="padding-top: 100px">
    <h1>All Users</h1>
    

    @if (Model.Any())
    {
        @foreach(var user in Model)
        {
            
            <div class="card bg-dark text-white-50 mt-5" style="width: 300px">
                <div class="card-header">
                    <p class="text-center"></p>
                    <div class="card-body"></div>
                    
                    <p>ID: @user.Id</p>
                    <p class="mt-3">Username: @user.UserName</p>
                    <div class="card-footer"></div>
                    <p class="d-flex justify-content-between"><button type="submit" class="btn btn-outline-danger"> Verwijderen</button>
                        <a asp-controller="Admin" asp-action="UserDetails" asp-route-id="@user.Id" class="btn btn-outline-primary"> Meer info</a>
                    </p>
                </div>

            </div>
            
        }
    }
    else
    {
        <p>Geen klanten beschikbaar</p>
    }
</body>
</html>