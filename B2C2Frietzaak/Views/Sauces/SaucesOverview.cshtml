@model IEnumerable<B2C2Frietzaak.Models.Sauce>

<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InleveropdrachtB2C2Frietzaak.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark text-white-50" style="padding-top: 100px">
    <div>
        <div class="d-flex justify-content-between">
            <h1>Alle Producten</h1>
             </div>
        <table class="table table-dark text-white-50">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SauceName)
                    </th>
                    <th>
                        Manage
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SauceName)
                        </td>
                        <td>
                            <a class="btn btn-outline-primary" asp-action="EditProducts" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-outline-danger" asp-action="DeleteProducts" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
    <div class="d-flex">
        <a class="btn btn-outline-success flex-column ms-auto" asp-action="AddProducts">Product Toevoegen</a>
    </div>

</body>
</html> 